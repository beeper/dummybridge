root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.{yaml,yml,py,md}]
indent_style = space

[{.gitlab-ci.yml,*.md,.github/workflows/*.yml,.pre-commit-config.yaml}]
indent_size = 2
